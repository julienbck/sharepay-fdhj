{% extends "layout.njk" %}


{% block titlePage %}Events list{% endblock %}

{% block content %}

<div class="eventsList">

<table class="table table-striped table-bordered table-sm">

  <thead class="thead-dark">
    <tr>
      <th>
        Event
      </th>
      <th>
        Place
      </th>
      <th>
        Date
      </th>
      <th>
        status
      </th>
      <th colspan="2">
        <a href="/events/new" class="btn btn-primary btn-sm">Ajouter</a>
      </th>
    </tr>
  </thead>

  <tbody>
    {% for event in events %}
    <tr>
      <td>
        {{ event.title }}
      </td>
      <td>
        {{ event.place }}
      </td>
      <td>
        {{ event.date }}
      </td>
      <td>
        {{ event.status }}
      </td>
      <td>
        <a href="/events/{{ event.id }}/edit" class="btn btn-block btn-primary btn-sm">Modifier</a>
      </td>
      <td>
        <a href="/spendings/{{ event.id }}" class="btn btn-block btn-success btn-sm">DÃ©penses</a>
      </td>
    </tr>
    {% endfor %}

  </tbody>

</table>


</div>

{% endblock %}
